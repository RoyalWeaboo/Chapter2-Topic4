<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/background_brimo_2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="32dp"
            android:text="Top Up"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/topup_brimo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:text="Top up your balance here!"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/background_brimo_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:layout_marginTop="40dp"
            android:text="Top up"
            android:textColor="@color/orange"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="40dp"
            android:text="amount"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="110dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_brimo_white_1" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:background="@color/white"
                android:hint="Min Rp5.000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="52dp"
                android:src="@drawable/background_brimo_white_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="52dp"
                android:src="@drawable/background_brimo_orange_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Send"
                android:textColor="@color/white" />

        </FrameLayout>
    </FrameLayout>


</LinearLayout>